<h1><%= @pageuser.username %>'s Profile Page</h1>

<div class="profile-your-info">
  Your session id is: <%= current_user.id %>
  <br>
  Your username is: <%= current_user.username %><br>
  <br>
</div>
<div class="profile-friend-info">
  Your friend's name: <%= User.find_by_id(params[:id]).f_name%> <%= User.find_by_id(params[:id]).l_name%>
  <br>
  Your friend's username: <%= User.find_by_id(params[:id]).username%>
  <br>
  Your friend's email: <%= User.find_by_id(params[:id]).email%>
</div>

  <div class="post-box-container">
  <% @posts.reverse_each do |post| %>
  <div class="post-box">
      <p class="test content"> <%= post.content %></p>
      <p class="test"> <small> <em>Posted on: <%= (post.created_at).localtime.strftime("%B %d, %Y %I:%M:%S %p")%></em></small></p>
      <% if @pageuser.id == current_user.id %>
        <a class="test" href="/postsedit/<%=post.id%>"><small>Edit</small></a>
      <% end %>
    </div>
    <br>
  <% end %>
</div>
