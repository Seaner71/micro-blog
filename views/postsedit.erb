<form action="/postsedit/<%=@posts.id%>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label>Update your post...</label>
  <br>
  <textarea name="content" rows="10" cols="50" maxlength="150" onkeyup="calcChars(this)"><%=@posts.content%></textarea><br>
  <br>
    <div><span class="postcount">150</span> Characters left</div>
  <input type="submit" value="Update">
</form>

<br><br>

